class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        for (size_t i = nums.size() - 1; i > 0; --i)
        {
            if (nums.at(i) == val)
            {
                nums.erase(nums.begin() + i); 
            }
        }    

        if (!nums.empty() && nums.at(0) == val)
        {
            nums.erase(nums.begin()); 
        }  
        return nums.size(); 
    }
};
